{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [
      "ES2016",
      "DOM"
    ],
    "removeComments": true,
    "noImplicitAny": true,
    "sourceMap": true
  },
  "parcelTsPluginOptions": {
    "transpileOnly": false
  },
  "include": [
    "src/**/*.ts"
  ]
}
